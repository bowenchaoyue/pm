<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaowen.dao.SeriesMapper">

	<resultMap type="series" id="baseResult">
		<id column="id" property="id" jdbcType="BIGINT"></id>
		<result column="name" property="name" jdbcType="VARCHAR"></result>
		<result column="en_name" property="name" jdbcType="VARCHAR"></result>
		<result column="delete_flag" property="deleteFlag" jdbcType="TINYINT"></result>
		<result column="create_id" property="createId" jdbcType="BIGINT"></result>
		<result column="update_id" property="updateId" jdbcType="BIGINT"></result>
		<result column="update_time" property="updateTime" jdbcType="TIMESTAMP"></result>
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP"></result>
	</resultMap>
	
	<sql id="tableName">series</sql>
	<sql id="baseColumn">id,name,en_name,delete_flag,create_id,update_id,update_time,create_time</sql>
	<sql id="noIdColumn">name,en_name,delete_flag,create_id,update_id,update_time,create_time</sql>
	<insert id="add" parameterType="series">
		insert into <include refid="tableName"></include>
		(<include refid="noIdColumn"/>)
		VALUES
		(#{name},#{enName},0,#{createId},#{updateId},now(),now())
	</insert>

	<update id="update" parameterType="series">
		  UPDATE <include refid="tableName"/>
		  set update_time = now()
		  <if test="updateId != null">
			  ,update_id = #{updateId}
		  </if>
		  ,name = #{name}
		WHERE  id = #{id}
	</update>

	<update id="delete" parameterType="series">
		UPDATE  <include refid="tableName"/>
		set delete_flag = 1
		WHERE delete_flag = 0
		<if test="id != null">
			AND id = #{id}
		</if>
		<if test="ids != null">
			OR  id in
			<foreach collection="ids" item="item" index="index" open="(" close=")" separator=",">
				#{item}
			</foreach>
		</if>
	</update>

	<select id="queryByPage" parameterType="series" resultMap="baseResult">
		SELECT <include refid="baseColumn"/>
		FROM <include refid="tableName"/>
		WHERE delete_flag = 0
		<if test="id != null">
			and id = #{id}
		</if>
		<choose>
			<when test="sort != null and sort != ''">
				ORDER BY ${sort} ${order}
			</when>
			<otherwise>
				ORDER BY create_time DESC
			</otherwise>
		</choose>
	</select>
</mapper>